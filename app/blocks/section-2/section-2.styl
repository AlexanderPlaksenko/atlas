.section-2
	display block
	background-color #113652
	padding 205px 0 160px 0
	+below(800px)
		padding: 40px 0 40px 0
.def-w
	max-width: 768px
	margin 0 auto
	+below(800px)
		padding 0 20px

.section-title
	font-family IntroBlackCaps
	font-size 30px
	color #fd5800
	margin-bottom: 30px
	+below(800px)
		font-size 26px

	span
		display block
		color #ffffff
		font-size 50px
		margin-top 10px
		+below(800px)
			font-size 44px

.section-p
	font-family IntroSemi
	color #ffffff
	font-size 18px
	margin-bottom 24px
	line-height: 22px
.section-2-table-block
	display: flex
	margin-top 40px
	+below(800px)
		flex-direction: column
		align-items: center
.section-2-img-f
	position relative
	left -44px
	top 15px
	+below(800px)
		left 0
		top 0
.section-2-table
	display: flex
	width: 100%
	justify-content: space-between
	flex-wrap wrap
	max-width: 461px

	.section-2-table-l
		text-align: left
	.section-2-table-r
		text-align: right
	.section-2-table-t
		color #ffffff
		font-family IntroSemi
		font-size 18px
		line-height 30px
	.section-2-table-f
		position: relative
		flex-grow 1
		flex-basis: 100%;
		display: flex
		width: 100%
		justify-content: space-between
		flex-wrap wrap
		&:before
			content: ''
			display: block
			width: 100%
			height 6px
			border-radius 15px
			background-color #ffffff
			opacity 0.1
			margin: 15px 0;
